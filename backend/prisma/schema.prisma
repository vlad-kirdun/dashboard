generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(uuid())
  email     String     @unique
  password  String
  name      String
  surname   String
  roles     UserRole[]
  createdAt DateTime   @default(now()) @map("created_at")
}

model Role {
  id    String     @id @default(uuid())
  code  String     @unique
  users UserRole[]
}

model UserRole {
  user   User   @relation(fields: [userId], references: [id])
  userId String
  role   Role   @relation(fields: [roleId], references: [id])
  roleId String

  @@id([userId, roleId])
}
